<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SearchView para filtrar en tiempo real -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar plan"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView donde se muestran los planes de estudio -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlanes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp" />

    <!-- FloatingActionButton para insertar un nuevo plan -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:contentDescription="Agregar plan"
        android:src="@android:drawable/ic_input_add" />
</LinearLayout>
