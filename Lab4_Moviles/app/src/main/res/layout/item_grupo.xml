<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tvGrupoId"        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvGrupoCiclo"     android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvGrupoCurso"     android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvGrupoNum"       android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvGrupoHorario"   android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvGrupoProfesor"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
